<h1>New network</h1>

<div class="span10 content-blurb shadow">

<%= form_for(@network) do |f| %>
<table class="table table-striped table-bordered table-hover table-condensed">
<tr>
	<td><label>Network </label></td>
        <td><%= f.text_field :network_no -%></td>
</tr> <tr>
	<td><label>Netmask </label></td>
        <td><%= f.text_field :netmask -%></td>
</tr> <tr>
	<td><label><%= f.label :name -%></label></td>
	<td><%= f.text_field :name -%></td>
</tr> <tr>
	<td><label><%= f.label :creator_id -%></label></td>
	<td><%= f.text_field :creator_id -%></td>
</tr> <tr>
	<td><label>Parent Network</label></td>
	<td><%= f.select :network_parent, options_from_collection_for_select(Network.all, :id, :name), :include_blank => true -%></td>
</tr>
	<%= f.submit -%>
<%- end -%>
</table>
